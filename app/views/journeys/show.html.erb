<div class="banner-map">
  <% if @journey.photo.attached? %>
    <%= image_tag @journey.photo, crop: :fill %>
  <% else %>
    <%= image_tag "https://images.winalist.com/blog/wp-content/uploads/2021/02/26144939/shutterstock_535048540-scaled.jpg", crop: :fill %>
  <% end %>
</div>
<div class="tickets-list">
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-3 text-white">
        <i class="fa-solid fa-chevron-left me-2"></i>
        <%= link_to "Your journeys", journeys_path, class: "text-white text-decoration-none" %>
      </div>
      <div class="col-6">
        <h1 class="text-center fw-bold m-0"><%= @journey.name.capitalize %></h1>
      </div>
      <div class="col-3 text-white text-end">
        <i class="fa-solid fa-pencil me-2"></i>
        <%= link_to "Edit this trip", edit_journey_path, class: "text-white text-end text-decoration-none" %>
      </div>
    </div>
  </div>
  <div class="tickets" data-journey-target="tickets">
    <% @journey.steps.each do |step| %>
      <%= render "ticket", step: step, readonly: true %>
    <% end %>
  </div>
</div>
