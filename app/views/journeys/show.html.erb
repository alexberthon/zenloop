<select class="form-select" aria-label="Default select example">
  <% @stations.each do |station| %>
    <option value= <%="#{station.name}"%>> <%="#{station.name}"%></option>
  <% end %>
</select>

<div class="map-side-bar">
  <div
    id="map"
    data-controller="map"
    data-map-selected-stations-value="<%= @selected_stations %>"
    data-map-reachable-stations-value="<%= @reachable_stations %>"
    data-map-strokes-value="<%= @strokes %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div class="left-side">

    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div id="side-search" class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Paris..."/>
      </div>
    <% end %>

      <ul class="station-list">
        <li><%= @journey.station_start.name %></li>
      </ul>
  </div>
</div>
