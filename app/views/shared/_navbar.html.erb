<% if user_signed_in? %>
  <div class="avatar-container">
    <div class="dropdown">
      <%= image_tag("harvey.jpg", crop: :fill, class: "avatar dropdown-toggle avatar-large", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false )%>
      <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
        <%= link_to "Homepage", "/", class: "dropdown-item" %>
        <%= link_to "Your journeys", "/journeys", class: "dropdown-item" %>
        <%= link_to "Log out", "/users/sign_out", class: "dropdown-item", data: {turbo_method: :delete} %>
      </div>
    </div>
  </div>
<% else %>
  <% if action_name == "home" %>
    <div class="btn-home-wrapper">
      <div class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "btn btn-flat btn-login" %>
      </div>
      <div class="nav-item">
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-primary btn-sign-up" %>
      </div>
    </div>
  <% end %>
<% end %>
