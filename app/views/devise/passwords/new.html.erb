<div id="login-card" class="card">

  <div class="card-body">

    <h2 class="text-center">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    label: false,
                    placeholder: "email*",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Reset password", class:"btn btn-primary" %>
      </div>
    <% end %>

 <br>
    <p>You already have an account? <br>
     <%= link_to "Log in", new_session_path(resource_name) %></p>

    <p>You don't have an account yet? <br>
    <%= link_to "Sign up", new_registration_path(resource_name) %></p>

  </div>

</div>
